        </div>

        <div class="lg:flex-wrap mx-auto lg:flex w-4/5 mt-16 md:flex md:flex-wrap md:content-between md:justify-center">

            {{#each rows}}
                <div class="wish-list mt-14 mb-20 lg:mx-10 pb-16 lg:pb-24 bg-white w-full lg:w-96 md:w-72 md:mx-3 relative rounded-l-3xl rounded-r-3xl border-b-4 border-t-4 border-red-500 shadow-2xl" data-aos="fade-up" data-aos-duration="1100">
                    <div class="w-36 h-36 mx-auto pt-8 mt-5 mb-5 rounded-full" style="background: url(/uploads/gifts/{{giftPicture}}) center; background-size: cover;"></div>
                    <img src="/assets/img/ornaments.png" class="absolute w-20 -top-5 -left-4">
                    <h1 class="text-center text-2xl ml-5 mr-5 lg:ml-7 lg:mr-7 font-bold mb-7">{{ giftName}}</h1>

                    <button class="flex mx-auto bg-yellow-400 text-white font-bold text-xl px-5 py-2 rounded-l-2xl rounded-r-2xl border-b-4 border-yellow-600 hover:bg-yellow-600 transition duration 500"><a href="#">Ver regalo</a></button>

                    {{!-- <h1 class=" text-center absolute -bottom-1 w-full bg-black font-bold bg-red-500 text-xl rounded-bl-3xl rounded-br-3xl py-2 text-white">1 Persona le regalara esto</h1> --}}
                </div>
            {{/each}}

        </div>
    </div>
    
    {{> footer}}

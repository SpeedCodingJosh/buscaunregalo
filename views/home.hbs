<!DOCTYPE html>
<html lang="en">
<head>
    {{> header }}
</head>
<body>
    <div>
        {{> navbar}}

        <div class="search-container flex items-center justify-center flex-col relative top-10 pb-14">
            <div class="name-page relative">
                <img src="/assets/img/gift-logo.png" alt="name" class="mt-3 mb-3 w-44 md:mt-0 lg:mt-10 lg:w-52 lg:mb-10" data-aos="fade-up" data-aos-duration="1000">
            </div>
            <input type="text" placeholder="Buscar..." id="filter" class="font-bold text-2xl py-3 px-5 outline-none capitalize focus:bg-gray-100 border-b-2 border-black transition-all duration-500 text-left md:w-9/12 lg:w-3/6 w-10/12 rounded-l-xl rounded-r-xl" data-aos="fade-up" data-aos-duration="2000">
            <div class="user-info shadow-2xl rounded-br-2xl rounded-bl-2xl bg-gray-200 max-h-96 overflow-y-auto lg:w-2/4 md:w-9/12 w-10/12">
                <ul id="result">
                    <li class="flex p-5 hide">
                        <h3 class="font-bold mx-auto py-2 text-xl">Cargando...</h3>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    {{> footer}}

    <!-- <script src="../helpers/search.js"></script> -->
</body>
</html>